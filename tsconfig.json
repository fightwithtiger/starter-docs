{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./"
      ],
      "demos/*": [
        "./demos/"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "/**/*.ts",
    "/**/*.d.ts",
    "/**/*.tsx",
    "/**/*.vue",
    "./auto-imports.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "axios"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}